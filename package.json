{
  "name": "accessibyebye-extension",
  "version": "1.0.0",
  "description": "Web accessibility overlays don't work. Wave them all bye-bye in one easy step, with AccessiByeBye!",
  "scripts": {
    "watch": "webpack --config webpack/webpack.dev.js --watch",
    "build": "yarn build:firefox && yarn build:chrome",
    "build:chrome": "webpack --config webpack/webpack.prod.js && zip -r chrome.zip dist",
    "zip": "zip -r src.zip . -x 'node_modules/*' '.git/*'",
    "build:firefox": "yarn zip && webpack --config webpack/webpack.prod.js && cd dist && zip -r ../firefox.zip .",
    "clean": "rimraf dist",
    "style": "prettier \"src/**/*.{ts,tsx}\" --write",
    "prepare": "./prepare_icons.sh"
  },
  "prettier": {
    "semi": false
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dcalvo/chrome-extension-typescript-starter.git"
  },
  "dependencies": {
    "crx-hotreload": "^1.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chrome": "0.0.100",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.0",
    "copy-webpack-plugin": "^6.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2 ",
    "ts-loader": "^6.2.1",
    "typescript": "~3.8.3 ",
    "webpack": "^4.44.1",
    "webpack-cli": "~3.3.11",
    "webpack-merge": "~4.2.2"
  }
}
